<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstrellaS6v2WS.MainPage">

    <StackLayout>
        <Label Text="Consumir web service" FontSize="20" HorizontalTextAlignment="Center"/>
        <Label x:Name="texto" Text=""></Label>
        
        <ListView x:Name="MyListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblnombre" Text="{Binding nombre}">
                            </Label>
                            <Label x:Name="lblapellido" Text="{Binding apellido}">
                            </Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Consultar" x:Name="btnGet" Clicked="btnGet_Clicked"/>
        <Button Text="Insertar" x:Name="btnPost" Clicked="btnPost_Clicked"/>
        <Button Text="Actualizar" x:Name="btnPut" Clicked="btnPut_Clicked"/>
        <Button Text="Eiminar" x:Name="btnDelete" Clicked="btnDelete_Clicked"/>


    </StackLayout>

</ContentPage>
